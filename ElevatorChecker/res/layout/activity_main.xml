<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/light_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_x="102dp"
        android:layout_y="3dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="8dp"
        android:text="Light Val:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/end_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="172dp"
        android:layout_y="321dp"
        android:text="Pause" />

    <Button
        android:id="@+id/begin_button"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="323dp"
        android:text="Play" />

    <Button
        android:id="@+id/recorder_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="59dp"
        android:layout_y="206dp"
        android:text="Rec Begin" />

    <Button
        android:id="@+id/recorder_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="168dp"
        android:layout_y="204dp"
        android:text="Rec End" />

</AbsoluteLayout>